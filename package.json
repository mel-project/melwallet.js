    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/jest": "^28.1.7",
    "@types/json-bigint": "^1.0.1",
    "@types/node": "^18.7.10",
    "colors": "^1.4.0",
    "commitizen": "^4.2.5",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-config": "^28.1.3",
    "json-bigint": "^1.0.0",
    "lint-staged": "^13.0.3",
    "lodash.camelcase": "^4.3.0",

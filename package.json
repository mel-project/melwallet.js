    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.33.0",
    "semantic-release": "^19.0.4",
    "shelljs": "^0.8.5",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.13",
    "typedoc": "^0.23.10",
    "typescript": "4.7.4",
    "typescript-is": "^0.19.0"
  },
  "dependencies": {
    "json-bigint": "^1.0.0",

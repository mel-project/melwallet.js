{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "ES2020.BigInt"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [
      {
        "transform": "typescript-is/lib/transform-inline/transformer"
      }
    ],
    "importHelpers": true,
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "*"
      ],
      "@utils/*": [
        "~/utils/*"
      ],
      "@types/*": [
        "~/types/*"
      ]
    }
  },
  "include": [
    "src/*",
    "src/types/raw-response-types.ts",
    "src/types/themelio-types.ts",
    "src/types/melwalletd-types.ts",
    "src/utils/utils.ts",
    "src/types/melwalletd-prot.ts"
  ]
}